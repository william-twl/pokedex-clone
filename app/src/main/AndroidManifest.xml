<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.william.pokedex_clone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_pokeball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pokeball"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokedexclone"
        android:fullBackupContent="false">
        <activity android:name=".module.favourite.activity.FavouriteListActivity"/>

        <activity android:name=".module.pokemon_detail.activity.PokemonDetailActivity" />
        <activity
            android:name=".module.splash.activity.SplashActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.main.activity.MainActivity" />
    </application>

</manifest>